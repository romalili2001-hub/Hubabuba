# Различные способы импорта модулей из пакета

# Способ 1: Импорт всего модуля
import my_package.numbers
result1 = my_package.numbers.add(10, 5)
print(f"10 + 5 = {result1}")

# Способ 2: Импорт конкретных функций из модуля
from my_package.strings import capitalize_string, reverse_string
result2 = capitalize_string("hello world")
print(f"Заглавные буквы: {result2}")

result3 = reverse_string("Python")
print(f"Перевернутая строка: {result3}")

# Способ 3: Импорт всех модулей из пакета
import my_package
result4 = my_package.add(8, 3)  # Функция импортирована в __init__.py
print(f"8 + 3 = {result4}")

# Способ 4: Импорт с псевдонимом
from my_package import utils as u
result5 = u.is_even(7)
print(f"7 четное? {result5}")

result6 = u.factorial(5)
print(f"Факториал 5 = {result6}")

# Способ 5: Импорт всего содержимого модуля (не рекомендуется для огромных модулей)
from my_package.numbers import *
result7 = multiply(4, 6)
print(f"4 * 6 = {result7}")

# Пример использования нескольких модулей
from my_package.numbers import divide
from my_package.strings import count_words

result8 = divide(15, 3)
print(f"15 / 3 = {result8}")

result9 = count_words("Пора отправляться на остров Самосир")
print(f"Количество слов: {result9}")
